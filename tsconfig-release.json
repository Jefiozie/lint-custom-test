{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "outDir": "./dist/rules",
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["mocha", "chai", "node"]
  },
  "include": ["src/**/*.ts"]
}
